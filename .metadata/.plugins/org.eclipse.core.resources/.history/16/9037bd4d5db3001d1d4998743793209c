#ifndef __ROBOT_H
#define __ROBOT_H

#include "stm32l1xx_hal.h"

enum StatusMotorPin { MOTOR_PIN_UP, MOTOR_PIN_DOWN };
enum StatusMotor { MOTOR_STOPPED, MOTOR_FORWARD, MOTOR_BACKWARD };
enum StatusRobot { ROBOT_STOPPED, ROBOT_FORWARD, ROBOT_BACKWARD, ROBOT_RIGHT, ROBOT_LEFT };

struct MotorPin {
  enum StatusMotorPin status;
  GPIO_TypeDef* gpio;
  char pin;
};

struct Motor {
  enum StatusMotor status;
  struct MotorPin pin_1;
  struct MotorPin pin_2;
};

struct Robot {
  enum StatusRobot status;
  struct Motor motor_right;
  struct Motor motor_left;
};

void createRobot();

void initMotorPin(struct MotorPin *motor_pin, GPIO_TypeDef *gpio, char pin);
void initMotor(Motor *motor, MotorPin *pin_1, MotorPin *pin_2);
void initRobot(Robot *robot, Motor *motor_right, Motor *motor_left);

void updateStatusRobot(Robot *robot, StatusRobot status);
void updateRobot(Robot *robot);

void updateStatusMotor(Motor *motor, StatusMotor status);
void updateMotor(Motor *motor);

void updateStatusMotorPin(MotorPin *motor_pin, StatusMotorPin status);
void updateMotorPin(MotorPin *motor_pin);

#endif /* __ROBOT_H */
